<Window x:Class="RevitAppScriptRevitTS.UI.SecondCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RevitAppScriptRevitTS.UI.SecondCommand"
        xmlns:vm="clr-namespace:RevitAppScriptRevitTS.UI.SecondCommand"
        Background="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Задание 2"
        Height="260" Width="650">

    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0,20,0,20"/>
        </Style>
    </Window.Resources>
    <!--Colomn 1-->
    <StackPanel>
        <!--1 Выбран элемент-->
        <StackPanel Orientation="Horizontal"
                    Margin="0,10,0,0">
            <TextBlock Text="Выбраный кран: " Margin="20,20,5,20"/>
            <TextBlock Text="{Binding Items[0].Id, StringFormat='Id: {0}, '}"/>
            <TextBlock Text="{Binding Items[0].XYZ, StringFormat='Координаты: {0}, '}"/>
            <TextBlock Text="{Binding Items[0].Distance, StringFormat='Расстояние: {0} m'}"/>
        </StackPanel>
        
        <!--2 Дальний -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Дальний кран: " Margin="20,20,5,20"/>
            <TextBlock Text="{Binding Items[1].Id, StringFormat='Id: {0}, '}"/>
            <TextBlock Text="{Binding Items[1].XYZ, StringFormat='Координаты: {0}, '}"/>
            <TextBlock Text="{Binding Items[1].Distance, StringFormat='Расстояние: {0} m'}"/>
        </StackPanel>
        
        <!--3 Ближний-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ближний кран: " Margin="20,20,5,20"/>
            <TextBlock Text="{Binding Items[2].Id, StringFormat='Id: {0}, '}"/>
            <TextBlock Text="{Binding Items[2].XYZ, StringFormat='Координаты: {0}, '}"/>
            <TextBlock Text="{Binding Items[2].Distance, StringFormat='Расстояние: {0} m'}"/>
        </StackPanel>
    </StackPanel>
</Window>
